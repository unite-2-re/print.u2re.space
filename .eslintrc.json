{
    "env": {
        "es6": true,
        "jest": true,
        "node": true
    },
    "sourceType": "module",
    "ignorePatterns": [".eslintrc.json"],
    "overrides": [
        {
            "files": ["*.ts"],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "ecmaVersion": "latest",
                "sourceType": "module",
                "project": "tsconfig.json",
                "tsconfigRootDir": "./"
            }
        }
    ],
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
            "typescript": {
                "alwaysTryTypes": true,
                "project": "./tsconfig.json"
            }
        }
    },
    "root": true
}
